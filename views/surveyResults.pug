include layouts/mainLayout
doctype html
head
    meta(charset='UTF-8')
    link(rel='stylesheet' href='/css/bootstrap.css')
    link(rel='stylesheet' href='/css/main.css')
    link(href='/css/main.css' rel='stylesheet')
    script(src='/js/bootstrap.js' type='application/javascript')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL' crossorigin='anonymous')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')
    title Personality Perfect!
    h2.card-title Interest Survey Results
        table.table
            thead
                tr
                    th(scope='col') Personality Type
                    th(scope='col') Total Points
                    th(scope='col') Percent
                    th(scope='col') Description
            tbody
                each c,i in categories
                    if percentages[i] >= 75
                        tr
                            td(style='background-color: greenyellow')= c.cat
                            td(style='background-color: greenyellow')= catPoints[i]
                            td(style='background-color: greenyellow')= percentages[i] + "%"
                            td= c.desc
                    else if percentages[i] >= 50
                        tr
                            td(style='background-color: yellow')= c.cat
                            td(style='background-color: yellow')= catPoints[i]
                            td(style='background-color: yellow')= percentages[i] + "%"
                            td= c.desc
                    else
                        tr
                            td(style='background-color: #FFAA33')= c.cat
                            td(style='background-color: #FFAA33')= catPoints[i]
                            td(style='background-color: #FFAA33')= percentages[i] + "%"
                            td= c.desc
    .col-md-6
    a.btn-link(href ='/survey') Take Survey Again